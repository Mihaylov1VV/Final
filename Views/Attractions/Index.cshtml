@model List<Attraction>

@{
    ViewData["Title"] = "Достопримечательности Сарапула";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Editor"))
{
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Добавить достопримечательность
        </a>
    </div>
}

<div class="row">
    @foreach (var attraction in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@attraction.ImageUrl" class="card-img-top" alt="@attraction.Name" 
                     style="height: 200px; object-fit: cover;"
                     onerror="this.src='/images/temp/default-attraction.jpg'">
                <div class="card-body">
                    <h5 class="card-title">@attraction.Name</h5>
                    <p class="card-text">@attraction.Description</p>
                    <p class="card-text">
                        <small class="text-muted">
                            <i class="bi bi-geo-alt"></i> @attraction.Address
                        </small>
                    </p>
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@attraction.Id" class="btn btn-primary">
                        <i class="bi bi-info-circle"></i> Подробнее
                    </a>
                    
                    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                    {
                        <a asp-action="Edit" asp-route-id="@attraction.Id" class="btn btn-warning ms-1">
                            <i class="bi bi-pencil"></i> Редактировать
                        </a>
                    }
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@attraction.Id" class="btn btn-danger ms-1">
                            <i class="bi bi-trash"></i> Удалить
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>